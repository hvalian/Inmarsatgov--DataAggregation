@page
@model Website.Pages.Configuration.DetailsModel

@{
    string pageTitle = "Configuration - Details";
    ViewData["Title"] = pageTitle;
}

<div class="container">
    <h1>@pageTitle</h1>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TbConfiguration.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TbConfiguration.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TbConfiguration.Value)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TbConfiguration.Value)
        </dd>
    </dl>

    @if (Model.TbConfiguration.TbActivityLoggers.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Old Value
                    </th>
                    <th>
                        New Value
                    </th>
                    <th>
                        Timestamp
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TbActivityLoggers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OldValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NewValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Timestamp)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
